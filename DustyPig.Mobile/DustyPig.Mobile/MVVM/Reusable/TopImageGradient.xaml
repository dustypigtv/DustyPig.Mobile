<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DustyPig.Mobile.MVVM.Reusable.TopImageGradient">
  <ContentView.Content>
        <StackLayout
            InputTransparent="True"
            HeightRequest="16">

            <StackLayout.Background>
                <LinearGradientBrush 
                    StartPoint="0,0"
                    EndPoint="0,1">
                    <GradientStop 
                        Color="Black"
                        Offset="0.0"/>
                    <GradientStop 
                        Color="Transparent"
                        Offset="1.0"/>
                </LinearGradientBrush>
            </StackLayout.Background>

        </StackLayout>
    </ContentView.Content>
</ContentView>