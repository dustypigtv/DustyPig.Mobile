                <DataTemplate x:DataType="x:String">
                     <Label
                        Margin="12"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        xct:TouchEffect.NativeAnimation="True"
                        Text="{Binding .}">
